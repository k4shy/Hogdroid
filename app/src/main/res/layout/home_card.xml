<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/tools"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="10dp"
        card_view:cardCornerRadius="4dp">

        <RelativeLayout
            android:background="@color/colorPrimaryDark"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/house_img"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:transitionName="imageMain"
                android:background="@drawable/default_image"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/house_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/house_img"
                android:layout_marginStart="10dp"
                android:gravity="center_horizontal|start"
                android:textColor="@color/colorText"
                android:textSize="20dp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btn_load_more"

                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_below="@id/house_img"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:background="@drawable/arrow"
                android:gravity="end" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_mascot_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/btn_load_more"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="Mascot"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_mascot"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_mascot_label"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:text="Hai!"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_head_of_house_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_mascot"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="Head of House"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_head_of_house"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_head_of_house_label"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:text="Hai!"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_house_ghost_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_head_of_house"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="House Ghost"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_house_ghost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_house_ghost_label"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:text="Hai!"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_founder_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_house_ghost"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="Founder"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_founder"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_founder_label"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:text="Hai!"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_school_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_founder"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="School"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_school_label"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:text="Hai!"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_values_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_school"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="Values"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"

                android:id="@+id/txt_more_values"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_values_label"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:text="Hai!"
                android:textSize="12sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/txt_more_colors_label"
                android:textColor="@color/colorText"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_values"
                android:layout_marginStart="10dp"
                android:paddingTop="5dp"
                android:paddingBottom="3dp"
                android:text="Colors"
                android:textSize="17sp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:textColor="@color/colorText"
                android:id="@+id/txt_more_colors"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/txt_more_colors_label"
                android:layout_marginStart="10dp"
                android:paddingBottom="5dp"
                android:textSize="12sp"
                android:visibility="gone" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
